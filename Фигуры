#include<iostream>
#include<cmath>
using namespace std;
int main()
{
    setlocale(0, "");
    int choice;
    cout << "[+]Геометрические фигуры\n\n";
    cout << "[1]Квадрат\n";
    cout << "[2]Треугольник\n";
    cout << "[3]Полый прямоугольник\n";
    cout << "[4]Прямоугольник\n";
    cout << "[5]Плюс\n";
    cout << "[6]Крестик\n";
    cout << "[7]Решётка\n";
    cout << "[8]Выбрать шахматное поле\n";
    cout << "[+]Выберите фигуру!: ";
    cin >> choice;
    switch (choice)
    {
    case 1:
        cout << "Выбран квадрат!\n\n";
        cout << "[1]Квадрат\n";
        cout << "[2]Рамка\n";
        cout << "Выберите фигуру: ";
        cin >> choice;
        switch (choice)
        {
        case 1:
            cout << "[1]Выберите размер: ";
            int size;
            cin >> size;
            cout << "[2]Выберите стиль: ";
            char still;
            cin >> still;
            for (int i = 0; i < size; i++)
            {
                for (int i = 0; i < size; i++)
                {
                    cout << still << " ";
                }
                cout << endl;
            }
            break;
        case 2:
            cout << "[1]Выберите размер: ";
            int size2;
            cin >> size2;
            cout << "[2]Выберите стиль: ";
            char still2;
            cin >> still2;
            for (int e = 0; e < size2; e++)
            {
                for (int c = 0; c < size2; c++)
                {
                    if (e == 0 || e == size2 - 1 || c == size2 - 1 || c == 0)
                    {
                        cout << still2 << " ";
                    }
                    else
                    {
                        cout << "  ";
                    }
                }

                cout << endl;
            }
            break;
        }


        break;

    case 2:
        cout << "Выбран треугольник!\n\n";
        cout << "[1]Выберите размер: ";
        int size1;
        cin >> size1;
        cout << "[2]Выберите стиль: ";
        char still1;
        cin >> still1;
        for (int y = 0; y < size1; y++)
        {
            for (int x = 0; x < size1; x++)
            {
                if (x == (size1 / 2) + y || x == (size1 / 2) - y || y == size1 / 2)
                {
                    cout << still1 << "  ";
                }
                else
                {
                    cout << "   ";
                }
            }
            cout << endl;
        }
        break;
    case 3:
        cout << "Выбран полый прямоугольник!\n\n";
        cout << "[1]Выберите длину: ";
        int size5;
        cin >> size5;
        cout << "[2]Выберите ширину: ";
        int long1;
        cin >> long1;
        cout << "[3]Выберите стиль: ";
        char still5;
        cin >> still5;
        for (int a = 0; a < size5; a++)
        {
            for (int b = 0; b < long1; b++)
            {
                if (a == 0 || b == 0 || a == size5 - 1 || b == long1 - 1)
                {
                    cout << still5 << "  ";
                }
                else
                {
                    cout << "   ";
                }
            }
            cout << endl;
        }
        break;
    case 4:
        cout << "Выбран прямоугольник!\n\n";
        cout << "[1]Выберите длину: ";
        int size6;
        cin >> size6;
        cout << "[2]Выберите ширину: ";
        int long2;
        cin >> long2;
        cout << "[3]Выберите стиль: ";
        char still6;
        cin >> still6;
        for (int a = 0; a < size6; a++)
        {
            for (int b = 0; b < long2; b++) {
                if (a <= size6 || b <= long2)
                {
                    cout << still6 << "  ";


                }
                else
                {
                    cout << " ";

                }
            }
            cout << "  ";

            cout << endl;
        }
        break;
    case 5:
        cout << "Выбран плюс!\n";
        cout << "[1]Выберите длину: ";
        int size11;
        cin >> size11;
        cout << "[2]Выберите ширину: ";
        int long11;
        cin >> long11;
        cout << "[3]Выберите стиль: ";
        char still11;
        cin >> still11;
        for (int a = 0; a < size11; a++)
        {
            for (int b = 0; b < long11; b++) {
                if (a==size11/2||b==long11/2)
                {
                    cout << still11 << "  ";


                }
                else
                {
                    cout << "   ";

                }
            }
            cout << "  ";

            cout << endl;
        }
        break;
    case 6:
        cout << "Выбран крестик!\n";
        cout << "[1]Введите размер: ";
        int size12;
        cin >> size12;
        cout << "[2]Выберите стиль: ";
        char still12;
        cin >> still12;
        for(int a=0 ; a < size12; a++)
        {
            for (int b = 0; b < size12; b++) {
                if (b==size12-a-1||b==size12/10+a) {
                    cout << still12 << "  ";
                }
                else
                {
                    cout << "  ";

                }
               
            }
            cout << "  ";
            cout << endl;
        }
            
        break;
    case 7:
        cout << "Выбрана решётка!\n";
        cout << "Введите длину: ";
        int size13;
        cin >> size13;
        cout << "Введите ширину: ";
        int size14;
        cin >> size14;
        cout << "Выберите стиль: ";
        char stil13;
        cin >> stil13;
        for (int a = 0; a < size13; a++) {
            for (int b = 0; b < size14; b++) {
                if (b == size13 / 2) {
                    cout << stil13 << "  ";
                }
                else
                {
                    cout << "  ";
                }
            }
            cout << "  ";
            cout << endl;
        }
        break;
    case 8:
        for (int y = 0; y <= 6; y++)

        {

            for (int x = 0; x <= 6; x++) {

                if ((x + y) % 2 == 0) {
                    cout << "# ";

                }
                else cout << " ";

            }



            cout << endl;

        }
    }
    

    int _; cin >> _;
    return 0;
}
