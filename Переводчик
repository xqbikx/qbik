    cout << " [1] Русские слова\n ";
    cout << "[2] Английские слова\n ";
    cout << "[3] Выход\n ";
    cin >> choise;
    switch (choise)
    {
    case 1:
        cout << "Переводчик 'Список русских слов'\n";
        cout << "[1] Дорога\n";
        cout << "[2] Еда\n";
        cout << "[3] Книга\n";
        cout << "[4] Сон\n";
        cout << "[5] Вода\n";
        cout << "[6] Учёба\n";
        cout << "[7] Школа\n";
        cout << "[8] Футболл\n";
        cout << "[9] Хоккей\n";
        cout << "[10] Гол\n";
